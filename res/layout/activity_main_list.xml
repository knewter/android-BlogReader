<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/empty_margin"
    tools:context=".MainListActivity" >

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/empty_margin"
        android:layout_marginLeft="@dimen/empty_margin"
        android:padding="@dimen/empty_margin"
        android:paddingBottom="@dimen/empty_margin"
        android:paddingLeft="@dimen/empty_margin"
        android:paddingRight="@dimen/empty_margin"
        android:paddingTop="@dimen/empty_margin" >

    </ListView>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>